<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml" >
    <GridPane layoutX="10.0" layoutY="240.0" prefHeight="98.0" prefWidth="580.0">
        <children>
            <Label fx:id="fieldLabel" text="Pick File: " />
            <AnchorPane GridPane.rowIndex="1">
                <children>
                    <TextField fx:id="inputField" prefHeight="30.0" prefWidth="288.0" GridPane.rowIndex="1" />
                    <Button onAction="#handleChoosingFile" fx:id="button" layoutX="290.0" layoutY="-1.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="100.0" text="Choose..." />
                </children>
            </AnchorPane>
        </children>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
    </GridPane>
</fx:root>
